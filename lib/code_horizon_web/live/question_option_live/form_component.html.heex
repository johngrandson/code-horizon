<div>
  <.form
    for={@form}
    id="question_option-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">
    
    <.field type="textarea" field={@form[:option_text]} />
    
    <.field type="checkbox" field={@form[:is_correct]} />
    
    <.field type="number" field={@form[:order]} />
    
    <div class="flex justify-end">
      <.button
        type="submit"
        phx-disable-with="Saving..."
        label="Save"
      />
    </div>
  </.form>
</div>
