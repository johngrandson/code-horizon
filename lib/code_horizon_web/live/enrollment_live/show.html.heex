<.container class="py-16">
  <.page_header title="Show Enrollment">
    <.button
      link_type="live_patch"
      label="Edit Enrollment"
      to={~p"/app/enrollments/#{@enrollment}/show/edit"}
    />

    <.button link_type="live_redirect" label="Back" to={~p"/app/enrollments"} />
  </.page_header>

  <%= if @live_action in [:new, :edit] do %>
    <.modal title={@page_title}>
      <.live_component
        module={CodeHorizonWeb.EnrollmentLive.FormComponent}
        id={@enrollment.id || :new}
        action={@live_action}
        enrollment={@enrollment}
        return_to={~p"/app/enrollments/#{@enrollment}"}
      />
    </.modal>
  <% end %>

  <div class="max-w-lg">
    <div class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2">
      <div class="sm:col-span-1">
        <div class="text-sm font-medium text-gray-500 dark:text-gray-400">
          Status
        </div>
        <div class="mt-1 text-sm text-gray-900 dark:text-gray-100">
          {@enrollment.status}
        </div>
      </div>

      <div class="sm:col-span-1">
        <div class="text-sm font-medium text-gray-500 dark:text-gray-400">
          Enrolled at
        </div>
        <div class="mt-1 text-sm text-gray-900 dark:text-gray-100">
          {@enrollment.enrolled_at}
        </div>
      </div>

      <div class="sm:col-span-1">
        <div class="text-sm font-medium text-gray-500 dark:text-gray-400">
          Expires at
        </div>
        <div class="mt-1 text-sm text-gray-900 dark:text-gray-100">
          {@enrollment.expires_at}
        </div>
      </div>
    </div>
  </div>
</.container>
