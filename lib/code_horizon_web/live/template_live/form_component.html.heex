<div>
  <.form
    for={@form}
    id="template-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">
    
    <.field type="text" field={@form[:name]} />
    
    <.field type="text" field={@form[:description]} />
    
    <.field type="text" field={@form[:primary_color]} />
    
    <.field type="text" field={@form[:accent_color]} />
    
    <.field type="checkbox" field={@form[:is_default]} />
    
    <div class="flex justify-end">
      <.button
        type="submit"
        phx-disable-with="Saving..."
        label="Save"
      />
    </div>
  </.form>
</div>
